---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import InteractiveHoverButton from '../components/InteractiveHoverButton.astro';
import AnimatedCard from '../components/AnimatedCard.astro';

const oficinas = [
  {
    ciudad: 'La Paz',
    direccion: 'Zona Industrial, Calle ejemplo #123',
    telefono: '(591) 2 123 456',
    email: 'info@inbolsa.bo',
    horario: 'Lun–Vie 11:00–17:00',
    color: 'from-brand-500 to-brand-600',
    bgColor: 'bg-brand-50',
    borderColor: 'border-brand-200',
    icon: `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"/></svg>`
  },
  {
    ciudad: 'Santa Cruz',
    direccion: 'Parque Industrial Warnes',
    telefono: '(591) 3 123 456',
    email: 'scz@inbolsa.bo',
    horario: 'Lun–Vie 11:00–17:00',
    color: 'from-emerald-500 to-green-600',
    bgColor: 'bg-emerald-50',
    borderColor: 'border-emerald-200',
    icon: `<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"/></svg>`
  }
];
---

<Base title="Contacto — Inbolsa">
  <Header />

  <main class="bg-white">
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
      </div>
      
      <div class="absolute top-20 -left-20 w-96 h-96 bg-brand-500/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-20 -right-20 w-96 h-96 bg-brand-400/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
      
      <div class="relative mx-auto max-w-7xl px-4 py-20 md:py-28">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-white mb-6">
            Contacto
          </h1>
          
          <p class="text-lg md:text-xl text-white/80 leading-relaxed">
            Estamos disponibles para atender tus consultas y brindarte la mejor solución para tus necesidades.
          </p>
        </div>
      </div>

      <div class="absolute bottom-0 left-0 right-0">
        <svg viewBox="0 0 1440 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
          <path d="M0 0L60 8.33C120 16.7 240 33.3 360 41.7C480 50 600 50 720 45C840 40 960 30 1080 28.3C1200 26.7 1320 33.3 1380 36.7L1440 40V100H1380C1320 100 1200 100 1080 100C960 100 840 100 720 100C600 100 480 100 360 100C240 100 120 100 60 100H0V0Z" fill="white"/>
        </svg>
      </div>
    </section>

    <!-- Formulario y Oficinas -->
    <section class="py-16 md:py-20">
      <div class="mx-auto max-w-7xl px-4">
        <div class="grid lg:grid-cols-5 gap-8 lg:gap-10">
          
          <!-- Formulario -->
          <div class="lg:col-span-3">
            <AnimatedCard variant="default">
              <div class="p-8 md:p-10">
                <form class="space-y-6" action="mailto:info@inbolsa.bo" method="post" enctype="text/plain">
                  <div class="grid md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                      <label for="nombre" class="block text-sm font-semibold text-slate-700">
                        Nombre completo *
                      </label>
                      <input 
                        type="text" 
                        id="nombre"
                        name="nombre"
                        required
                        placeholder="Juan Pérez"
                        class="w-full rounded-xl border-2 border-slate-200 bg-white px-4 py-3 text-slate-900 placeholder-slate-400 outline-none transition-all focus:border-brand-500 focus:ring-4 focus:ring-brand-500/10"
                      />
                    </div>

                    <div class="space-y-2">
                      <label for="email" class="block text-sm font-semibold text-slate-700">
                        Email *
                      </label>
                      <input 
                        type="email" 
                        id="email"
                        name="email"
                        required
                        placeholder="juan@empresa.com"
                        class="w-full rounded-xl border-2 border-slate-200 bg-white px-4 py-3 text-slate-900 placeholder-slate-400 outline-none transition-all focus:border-brand-500 focus:ring-4 focus:ring-brand-500/10"
                      />
                    </div>
                  </div>

                  <div class="grid md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                      <label for="telefono" class="block text-sm font-semibold text-slate-700">
                        Teléfono *
                      </label>
                      <input 
                        type="tel" 
                        id="telefono"
                        name="telefono"
                        required
                        placeholder="+591 2 123 4567"
                        class="w-full rounded-xl border-2 border-slate-200 bg-white px-4 py-3 text-slate-900 placeholder-slate-400 outline-none transition-all focus:border-brand-500 focus:ring-4 focus:ring-brand-500/10"
                      />
                    </div>

                    <div class="space-y-2">
                      <label for="empresa" class="block text-sm font-semibold text-slate-700">
                        Empresa
                      </label>
                      <input 
                        type="text" 
                        id="empresa"
                        name="empresa"
                        placeholder="Nombre de tu empresa"
                        class="w-full rounded-xl border-2 border-slate-200 bg-white px-4 py-3 text-slate-900 placeholder-slate-400 outline-none transition-all focus:border-brand-500 focus:ring-4 focus:ring-brand-500/10"
                      />
                    </div>
                  </div>

                  <div class="space-y-2">
                    <label for="ciudad" class="block text-sm font-semibold text-slate-700">
                      Ciudad de interés *
                    </label>
                    <select 
                      id="ciudad"
                      name="ciudad"
                      required
                      class="w-full rounded-xl border-2 border-slate-200 bg-white px-4 py-3 text-slate-900 outline-none transition-all focus:border-brand-500 focus:ring-4 focus:ring-brand-500/10"
                    >
                      <option value="">Selecciona una ciudad</option>
                      <option value="la-paz">La Paz</option>
                      <option value="santa-cruz">Santa Cruz</option>
                      <option value="otra">Otra ciudad</option>
                    </select>
                  </div>

                  <div class="space-y-2">
                    <label for="mensaje" class="block text-sm font-semibold text-slate-700">
                      Mensaje *
                    </label>
                    <textarea 
                      id="mensaje"
                      name="mensaje"
                      required
                      rows="6"
                      placeholder="Cuéntanos sobre tu proyecto o necesidad..."
                      class="w-full rounded-xl border-2 border-slate-200 bg-white px-4 py-3 text-slate-900 placeholder-slate-400 outline-none transition-all focus:border-brand-500 focus:ring-4 focus:ring-brand-500/10 resize-none"
                    ></textarea>
                  </div>

                  <div class="flex items-start gap-3">
                    <input 
                      type="checkbox" 
                      id="acepto"
                      required
                      class="mt-1 h-4 w-4 rounded border-slate-300 text-brand-600 focus:ring-brand-500"
                    />
                    <label for="acepto" class="text-sm text-slate-600">
                      Acepto la política de privacidad y el tratamiento de mis datos personales
                    </label>
                  </div>

                  <InteractiveHoverButton 
                    variant="primary"
                    size="lg"
                    class="w-full"
                  >
                    Enviar mensaje
                  </InteractiveHoverButton>

                  <p class="text-center text-sm text-slate-500">
                    * Campos obligatorios
                  </p>
                </form>
              </div>
            </AnimatedCard>
          </div>

          <!-- Oficinas -->
          <div class="lg:col-span-2 space-y-6">
            <AnimatedCard variant="default">
              <div class="p-8">
                <h3 class="text-2xl font-bold text-slate-900 mb-6">
                  Nuestras oficinas
                </h3>
                
                <div class="space-y-6">
                  {oficinas.map((oficina) => (
                    <div class="group relative rounded-2xl border-2 border-slate-200 p-6 hover:border-brand-300 transition-all hover:shadow-lg overflow-hidden">
                      <div class={`absolute inset-0 bg-gradient-to-br ${oficina.color} opacity-0 group-hover:opacity-5 transition-opacity`}></div>
                      
                      <div class="relative">
                        <div class="flex items-center gap-3 mb-4">
                          <div class={`w-12 h-12 rounded-xl ${oficina.bgColor} border-2 ${oficina.borderColor} flex items-center justify-center text-slate-700`}>
                            <div set:html={oficina.icon}></div>
                          </div>
                          <h4 class="text-xl font-bold text-slate-900">{oficina.ciudad}</h4>
                        </div>
                        
                        <div class="space-y-3 text-sm text-slate-600">
                          <div class="flex items-start gap-3">
                            <svg class="w-5 h-5 flex-shrink-0 text-slate-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            <span>{oficina.direccion}</span>
                          </div>
                          
                          <div class="flex items-center gap-3">
                            <svg class="w-5 h-5 flex-shrink-0 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                            <span class="font-semibold">{oficina.telefono}</span>
                          </div>
                          
                          <div class="flex items-center gap-3">
                            <svg class="w-5 h-5 flex-shrink-0 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            <span class="font-semibold">{oficina.email}</span>
                          </div>
                          
                          <div class="flex items-center gap-3">
                            <svg class="w-5 h-5 flex-shrink-0 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span>{oficina.horario}</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </AnimatedCard>

            <div class="rounded-2xl bg-gradient-to-br from-brand-600 to-brand-700 p-8 text-white">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-white/10 backdrop-blur flex items-center justify-center">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold text-lg mb-2">Tiempo de respuesta</h4>
                  <p class="text-white/90 text-sm">
                    Nos comprometemos a responder tu consulta en un máximo de 24 horas hábiles.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Base>