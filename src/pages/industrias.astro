            <AnimatedCard variant="gradient">
              <div class="p-8">
                <div class={`absolute inset-0 bg-gradient-to-br ${industry.color} opacity-0 group-hover:opacity-5 transition-opacity duration-500`}></div>
                
                <div class="relative">
                  <div class={`inline-flex items-center justify-center w-16 h-16 rounded-2xl ${industry.bgColor} border-2 ${industry.borderColor} group-hover:scale-110 transition-transform duration-500 text-3xl mb-4`}>
                    {industry.icon}
                  </div>
                  
                  <h3 class={`text-2xl font-bold ${industry.textColor} mb-2 group-hover:translate-x-2 transition-transform duration-300`}>
                    {industry.name}
                  </h3>
                  
                  <p class="text-slate-600 font-medium mb-3">
                    {industry.desc}
                  </p>
                  
                  <p class="text-sm text-slate-500 mb-6">
                    {industry.text}
                  </p>

                  <div class="space-y-2 mb-6">
                    <p class="text-xs font-semibold text-slate-400 uppercase tracking-wider">Productos destacados:</p>
                    {industry.products.map((product) => (
                      <div class="flex items-center gap-2 text-sm text-slate-600">
                        <svg class={`w-4 h-4 ${industry.textColor}`} fill="currentColor" viewBox="0 0 20 20">
