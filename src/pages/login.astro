---
// /login.astro - Página de LOGIN (nueva)
export const prerender = true;
import AppLayout from '../layouts/AppLayout.astro';

const basePath = import.meta.env.PUBLIC_BASE || '/inbolsaNeo';
const apiBase = import.meta.env.PUBLIC_API_BASE || '/inbolsaNeo/inbolsa-api/api';
---
<AppLayout title="Iniciar sesión — Inbolsa">
  <section class="relative overflow-hidden py-16 min-h-screen flex items-center justify-center">
    <div class="absolute -top-40 -left-40 h-80 w-80 rounded-full bg-brand-300 blur-3xl opacity-40"></div>

    <div class="mx-auto max-w-md px-4 w-full" data-base-path={basePath} data-api-base={apiBase}>
      <div class="text-center mb-8">
        <div class="flex items-center justify-center gap-2 font-semibold text-brand-700 mb-4">
          <span class="inline-block h-2 w-2 rounded-full bg-brand-600 shadow-[0_0_16px_2px_rgba(62,125,210,.4)]"></span>
          Inbolsa · Administración
        </div>
        <h1 class="text-3xl font-semibold tracking-tight">Iniciar sesión</h1>
        <p class="mt-2 text-slate-600">Accede al panel de administración</p>
      </div>

      <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-sm">
        <p id="loginErr" class="hidden mb-4 rounded-xl bg-red-50 border border-red-200 text-red-700 px-4 py-3 text-sm"></p>

        <form id="loginForm" class="space-y-5">
          <label class="block">
            <span class="text-sm font-medium text-slate-700">Email</span>
            <input
              id="email"
              type="email"
              required
              placeholder="admin@inbolsa.com"
              class="mt-2 w-full rounded-xl border border-slate-300 px-4 py-3 outline-none focus:ring-2 focus:ring-brand-300 focus:border-brand-400 transition"
            />
          </label>
          <label class="block">
            <span class="text-sm font-medium text-slate-700">Contraseña</span>
            <input
              id="password"
              type="password"
              required
              placeholder="••••••••"
              class="mt-2 w-full rounded-xl border border-slate-300 px-4 py-3 outline-none focus:ring-2 focus:ring-brand-300 focus:border-brand-400 transition"
            />
          </label>
          <button
            type="submit"
            class="w-full rounded-xl bg-brand-600 text-white py-3 font-semibold hover:bg-brand-700 transition">
            Entrar al panel
          </button>
        </form>

        <div class="mt-6 text-center">
          <a href="/inbolsaNeo/" class="text-sm text-slate-600 hover:text-brand-700 transition">
            ← Volver al sitio público
          </a>
        </div>
      </div>
    </div>
  </section>

  <script type="module">
    import { api } from '/inbolsaNeo/lib/api.js';

    // Si ya está logueado, redirigir a /app
    (async function checkExistingAuth() {
      try {
        const response = await api.me();
        if (response?.auth) {
          window.location.href = '/inbolsaNeo/app';
          return;
        }
      } catch (error) {
        // No autenticado, mostrar login
      }
    })();

    const loginForm = document.getElementById('loginForm');
    const loginErr = document.getElementById('loginErr');
    const emailInput = document.getElementById('email');
    const passwordInput = document.getElementById('password');

    // Pre-llenar para desarrollo
    emailInput.value = 'admin@inbolsa.com';
    passwordInput.value = '123456';

    loginForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      loginErr.classList.add('hidden');
      loginErr.textContent = '';

      const email = emailInput.value.trim().toLowerCase();
      const password = passwordInput.value;

      try {
        const response = await api.login(email, password);

        if (response?.ok) {
          // Login exitoso → esperar un momento para que se establezcan las cookies
          await new Promise(resolve => setTimeout(resolve, 100));
          // Verificar que la sesión esté activa antes de redirigir
          try {
            const meResponse = await api.me();
            if (meResponse?.auth) {
              window.location.href = '/inbolsaNeo/app';
            } else {
              loginErr.textContent = 'Error al iniciar sesión. Intenta nuevamente.';
              loginErr.classList.remove('hidden');
            }
          } catch {
            // Si falla la verificación, intentar redirigir de todas formas
            window.location.href = '/inbolsaNeo/app';
          }
        } else {
          loginErr.textContent = response.error || 'Credenciales inválidas';
          loginErr.classList.remove('hidden');
        }
      } catch (ex) {
        console.error('Error en login:', ex);
        loginErr.textContent = 'Error de conexión. Intenta nuevamente.';
        loginErr.classList.remove('hidden');
      }
    });
  </script>
</AppLayout>
