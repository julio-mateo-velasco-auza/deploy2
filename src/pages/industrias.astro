    <section class="py-12 bg-slate-50">
      <div class="mx-auto max-w-7xl px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          {stats.map((stat) => (
            <AnimatedCard variant="default" class="text-center">
              <div class="p-6">
                <span class="text-4xl font-bold bg-gradient-to-r from-brand-600 to-brand-700 bg-clip-text text-transparent">
                  {stat.value}
                </span>
                <span class="mt-2 block text-sm text-slate-600 font-medium">{stat.label}</span>
