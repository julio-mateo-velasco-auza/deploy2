---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const milestones = [
  {
    year: '1974',
    title: 'Fundación de Inbolsa',
    description: 'Iniciamos operaciones fabricando envases tejidos de polipropileno de alta calidad.',
    imageLeft: '/inbolsaNeo/img/landing16.jpg',
    imageRight: '/inbolsaNeo/img/landing20.jpg'
  },
  {
    year: '2000',
    title: 'Modernización y expansión',
    description: 'Actualización significativa de infraestructura y maquinaria.',
    imageLeft: '/inbolsaNeo/img/landing12.jpg',
    imageRight: '/inbolsaNeo/img/landing18.jpg'
  },
  {
    year: '2016',
    title: 'Certificación OEA',
    description: 'Primera certificación como Operador Económico Autorizado.',
    imageLeft: '/inbolsaNeo/img/landing18.jpg',
    imageRight: '/inbolsaNeo/img/landing21.jpg'
  },
  {
    year: '2017',
    title: 'Planta Big Bag',
    description: 'Inauguración de planta dedicada exclusivamente a Big Bags.',
    imageLeft: '/inbolsaNeo/img/landing21.jpg',
    imageRight: '/inbolsaNeo/img/landing14.jpg'
  },
  {
    year: '2024',
    title: 'Nueva planta en Warnes',
    description: 'Planta moderna en Warnes, Santa Cruz.',
    imageLeft: '/inbolsaNeo/img/landing14.jpg',
    imageRight: '/inbolsaNeo/img/landing13.jpg'
  },
  {
    year: '2025',
    title: 'Innovación Block Bottom',
    description: 'Lanzamiento de bolsas con fondo cuadrado.',
    imageLeft: '/inbolsaNeo/img/landing25.jpg',
    imageRight: '/inbolsaNeo/img/landing24.JPG'
  }
];
---

<style>
  .timeline-slider {
    scroll-behavior: smooth;
    scrollbar-width: none;
  }
  .timeline-slider::-webkit-scrollbar {
    display: none;
  }

  .timeline-dot {
    transition: all 0.3s ease;
  }

  .timeline-dot.active {
    background-color: #3E7DD2;
    transform: scale(1.3);
  }
</style>

<Base title="Historia — Inbolsa">
  <Header />

  <main class="bg-slate-900">
    <!-- Hero Section -->
    <section class="py-20 text-center text-white">
      <div class="mx-auto max-w-7xl px-4">
        <p class="text-brand-400 font-semibold mb-2 uppercase tracking-wide text-sm">Nuestra trayectoria</p>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">Historia</h1>
        <p class="text-xl text-slate-300 max-w-3xl mx-auto">
          Más de 50 años de excelencia en la industria del polipropileno.
        </p>
      </div>
    </section>

    <!-- Timeline Slider Section -->
    <section class="pb-20">
      <div class="mx-auto max-w-[1600px] px-4">
        <!-- Contenedor del slide actual -->
        <div id="timeline-slider" class="relative">
          <!-- Slide Container -->
          <div class="bg-slate-800 rounded-3xl overflow-hidden shadow-2xl">
            <div class="grid md:grid-cols-2 gap-0 items-center min-h-[500px]">
              <!-- Imagen Izquierda -->
              <div class="h-full">
                <img 
                  id="slide-img-left" 
                  src={milestones[0].imageLeft}
                  alt="Historia" 
                  class="w-full h-full object-cover min-h-[400px] md:min-h-[500px]"
                />
              </div>

              <!-- Contenido Central -->
              <div class="relative px-8 md:px-16 py-12 text-white">
                <!-- Año grande -->
                <div class="flex items-center gap-4 mb-6">
                  <h2 id="slide-year" class="text-6xl md:text-8xl font-bold text-brand-400">
                    {milestones[0].year}
                  </h2>
                  <svg class="w-16 h-16 text-brand-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                  </svg>
                </div>

                <!-- Título -->
                <h3 id="slide-title" class="text-3xl md:text-4xl font-bold mb-4">
                  {milestones[0].title}
                </h3>

                <!-- Descripción -->
                <p id="slide-description" class="text-lg text-slate-300 leading-relaxed">
                  {milestones[0].description}
                </p>
              </div>
            </div>
          </div>

          <!-- Controles de navegación -->
          <div class="flex justify-between items-center mt-8">
            <button 
              id="prev-btn"
              class="p-3 rounded-full bg-slate-700 text-white hover:bg-brand-600 transition disabled:opacity-30 disabled:cursor-not-allowed"
              aria-label="Anterior"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
            </button>

            <button 
              id="next-btn"
              class="p-3 rounded-full bg-slate-700 text-white hover:bg-brand-600 transition"
              aria-label="Siguiente"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- Timeline Navigation (años en la parte inferior) -->
        <div class="mt-12 overflow-x-auto">
          <div class="flex items-center justify-between min-w-max mx-auto px-4 gap-4">
            {milestones.map((milestone, index) => (
              <div class="flex items-center">
                <button 
                  class="timeline-year-btn flex flex-col items-center group"
                  data-index={index}
                >
                  <span class="text-white text-lg font-bold mb-3 opacity-50 group-hover:opacity-100 transition">
                    {milestone.year}
                  </span>
                  <div class="timeline-dot w-4 h-4 rounded-full bg-slate-600 group-hover:bg-brand-500"></div>
                </button>
                {index < milestones.length - 1 && (
                  <div class="w-24 md:w-32 h-0.5 bg-slate-700 mx-2"></div>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-slate-800 py-16">
      <div class="mx-auto max-w-4xl px-4 text-center text-white">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Construyendo el futuro juntos
        </h2>
        <p class="text-lg text-slate-300 mb-8">
          Conoce más sobre nuestros valores y compromisos.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/valores" class="px-8 py-3 bg-brand-600 text-white rounded-xl font-semibold hover:bg-brand-700 transition shadow-lg">
            Nuestros Valores
          </a>
          <a href="/contacto" class="px-8 py-3 border-2 border-slate-600 text-white rounded-xl font-semibold hover:border-brand-600 hover:bg-slate-700 transition">
            Contáctanos
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />

  <script define:vars={{ milestones }}>
    let currentIndex = 0;
    const totalSlides = milestones.length;

    const slideImgLeft = document.getElementById('slide-img-left');
    const slideYear = document.getElementById('slide-year');
    const slideTitle = document.getElementById('slide-title');
    const slideDescription = document.getElementById('slide-description');
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    const dots = document.querySelectorAll('.timeline-dot');
    const yearButtons = document.querySelectorAll('.timeline-year-btn');

    function updateSlide(index) {
      const milestone = milestones[index];
      
      // Actualizar contenido con fade
      slideImgLeft.style.opacity = '0';
      slideYear.style.opacity = '0';
      slideTitle.style.opacity = '0';
      slideDescription.style.opacity = '0';

      setTimeout(() => {
        slideImgLeft.src = milestone.imageLeft;
        slideYear.textContent = milestone.year;
        slideTitle.textContent = milestone.title;
        slideDescription.textContent = milestone.description;

        slideImgLeft.style.opacity = '1';
        slideYear.style.opacity = '1';
        slideTitle.style.opacity = '1';
        slideDescription.style.opacity = '1';
      }, 300);

      // Actualizar dots
      dots.forEach((dot, i) => {
        if (i === index) {
          dot.classList.add('active');
        } else {
          dot.classList.remove('active');
        }
      });

      // Actualizar botones
      prevBtn.disabled = index === 0;
      nextBtn.disabled = index === totalSlides - 1;

      currentIndex = index;
    }

    // Transición suave
    slideImgLeft.style.transition = 'opacity 0.3s ease';
    slideYear.style.transition = 'opacity 0.3s ease';
    slideTitle.style.transition = 'opacity 0.3s ease';
    slideDescription.style.transition = 'opacity 0.3s ease';

    prevBtn.addEventListener('click', () => {
      if (currentIndex > 0) {
        updateSlide(currentIndex - 1);
      }
    });

    nextBtn.addEventListener('click', () => {
      if (currentIndex < totalSlides - 1) {
        updateSlide(currentIndex + 1);
      }
    });

    yearButtons.forEach((btn) => {
      btn.addEventListener('click', () => {
        const index = parseInt(btn.dataset.index);
        updateSlide(index);
      });
    });

    // Inicializar primer dot
    updateSlide(0);
  </script>
</Base>