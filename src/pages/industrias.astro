            </svg>
          </a>
          <a 
            href="/historia" 
            class="inline-flex items-center gap-2 rounded-xl border-2 border-white/30 bg-white/10 backdrop-blur-sm px-8 py-4 text-white font-medium hover:bg-white/20 transition-all"
          >
            Conoce nuestra historia
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />

  <!-- Animaciones -->
  <style>
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Smooth scroll */
    html {
      scroll-behavior: smooth;
    }

    /* Mejoras adicionales de hover */
    @media (hover: hover) {
      .group:hover .group-hover\:scale-105 {
        transform: scale(1.05);
      }
    }
  </style>
</Base>